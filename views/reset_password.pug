extends layout 

block content 
    .auth   
        //- .payload
        form#reset_password.reset_password(method="POST" action="/reset")
            .formtitle 
                h3 Sqwarkbox
            .formcontainer
                .formsubtitle 
                    p Reset password 
                .vert 
                    .label
                        label(for="email") email: *
                    .input
                        input#email.email(name="email" type="email" required title="email is required for password resets\nunique ")
                .vert 
                    .label
                        label(for="password") Old Password: *
                    .input
                        input#password.password(name="oldpassword" type="password" required title="absolutely required to maintain your account secure")
                .vert 
                    .label
                        label(for="password") New Password: *
                    .input
                        input#password.password(name="password" type="password" required title="absolutely required to maintain your account secure")
                .vert 
                    .label
                        label(for="confirm") Confirm Password: *
                    .input
                        input#confirm.confirm(name="confirm" type="password" required)

                .formsubmit
                    input#submit.submit(type="submit" value="Reset") 

                .errors
                    if status === 403
                        p To post a message you must authenticate

